<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"  
	    android:id="@+id/front"
       android:tag="front"
       style="@style/MyListFrontContent"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:orientation="horizontal" 
			android:background="@drawable/list_selector"
			android:padding="2dip"> 

		<TextView 
				android:id="@+id/lineTopValue" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
	      android:layout_alignParentTop="true"
		    android:layout_alignParentRight="true"
		    android:textSize="12sp"
		    android:text="" /> 
 
		<TextView
		    android:id="@+id/lineValue"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/lineTopValue"
		    android:gravity="center_horizontal|center_vertical"
		    android:textSize="16sp"
		    android:text="Name"
		    android:layout_marginLeft="60dp"
		    android:layout_marginRight="20dp"
		    android:textStyle="bold" />
		
		<TextView 
				android:id="@+id/lineHR" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
		    android:textSize="12sp"
		    android:layout_margin="2dp"
		    android:text="HR" />
		<TextView 
				android:id="@+id/lineDate" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
		    android:textSize="12sp"
		    android:layout_margin="2dp"
		    android:text="Date" />
				 
		<TextView
		    android:id="@+id/lineBottomValue"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/lineValue"
		    android:layout_alignParentRight="true"
		    android:layout_gravity="bottom"
		    android:textSize="12sp"
		    android:text="" />
