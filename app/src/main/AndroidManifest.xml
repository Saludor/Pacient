<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.utis.patient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.utis.patient.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.utis.patient.TemperatureActivity"
            android:label="@string/title_activity_temperature" >
        </activity>
        <activity
            android:name="com.utis.patient.MeasurementActivity"
            android:label="@string/title_activity_measurement" >
        </activity>
        <activity
            android:name="com.utis.patient.FamilyEditActivity"
            android:label="@string/title_activity_family_edit" >
        </activity>
        <activity
            android:name="com.utis.patient.MeasurementEditActivity"
            android:label="@string/title_activity_measurement_edit" >
        </activity>
        <activity
            android:name="com.utis.patient.MeasurementPlotActivity"
            android:label="@string/title_activity_measurement_plot" >
        </activity>
        <activity
            android:name="com.utis.patient.CameraActivity"
            android:label="@string/title_activity_camera" >
        </activity>
    </application>

</manifest>
